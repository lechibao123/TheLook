<div id="layer-addcart-modal" style="display: none; position: fixed;  top: 0%; left: 0%; width: 100%; height: 100%; ">
  <div class="layer-addcart-modal">

    <div class="addcart-overlay"></div>

    <div class="addcart-modal-box" style="display: none;">

      <div class="addcart-modal-content">
        <p class="note">
          {%- render 'theme-icon', type: 'ok' -%}
          {{ 'general.cart_modal.cart_modal_successfully' | t }}
        </p>

        <div class="addcart-modal-product">
          <div class="addcart-modal-image"></div>
          <div class="addcart-modal-info">
            <div class="addcart-modal-title"></div>
            <div class="addcart-modal-variant"></div>
            <div class="addcart-modal-qty"></div>
            <div class="addcart-modal-price"></div>
          </div>
        </div>

        <div class="addcart-modal-action">
          <div class="addcart-modal-number"></div>
          <div class="addcart-modal-subtotal"></div>
          <div class="wrap-progress progress-shipping-{{ settings.enable_free_shipping }}"><div class="sb-progress"></div><div class="sb-text"></div></div>
          <div class="addcart-modal-button">
            <div class="addcart-modal-continue">
              <a href="javascript:void(null)" onclick="AT_AddCart.addcartModalHide()" class="btn btn-2"></i>{{ 'cart.general.continue_shopping' | t }}</a>
            </div>
            <div class="addcart-modal-checkout">
              <a class="btn btn-1" href="{{ routes.cart_url }}">{{ 'cart.general.checkout' | t }}</a>
            </div>
          </div>
        </div>
      </div>

      <div class="addcart-modal-close" onclick="AT_AddCart.addcartModalHide()" title="{{ 'customer.general.close' | t }}">{%- render 'theme-icon', type: 'cancel-2' -%}</div>

    </div>

  </div>    
</div>