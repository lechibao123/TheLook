<div class="listing-item">
  <div class="row">

    <div class="product-image col-lg-4 col-md-4 col-sm-4 col-4">
      <div class="featured-img product-ratio-{{ settings.collections_product_ratio }}">
        <a href="{{ product.url | within: collection }}">
          {% include 'product-image-lazysize' with image: product.featured_image, image_size: '200x', image_class: '', image_alt: product.title %}
        </a>
      </div>
    </div>

    <div class="product-content col-lg-8 col-md-8 col-sm-8 col-8">
      <div class="product-content-inner">

        <a href="{{ product.url | within: collection }}">{{ product.title }}</a>

        {% include 'product-grid-review' %}
        {% include 'product-price' %}

      </div>
    </div>

  </div>
</div>