{% include 'products-tabs-config' %}

{%- assign _heading = section.settings.heading -%}
{%- assign _subheading = section.settings.subheading -%}
{%- assign _fix_subheading_position = section.settings.fix_subheading -%}

<div role="tabpanel" id="hp-tabs-{{ section.id }}" class="hp-tabs-section layout-{{_layout }}{% if _remove_padding %} remove-padding{% endif %} tab-style-v1{% if _hide_mobile %} d-none d-md-block{% endif %}{% if _heading == blank %} heading-false{% endif %}{% if _padding == 'no' %} no-padding{% endif %}" style="background-color: {{ _background }};" data-section-type="products-tabs" data-section-id="{{ section.id }}">
  {% if settings.left_column_style == 'none' %}<div class="{{ _layout_class }}">{% endif %}

      {% include 'heading-block' %}

      <div class="wrap-tab-content{% unless _subheading == blank %} subheading-true fix-subheading-{{ _fix_subheading_position }}{% endunless %}" data-type="{{ _type }}">
        {% if section.blocks.size > 0 %}

          <div class="nav-tab-wrapper{% if section.blocks.size < 4 %} fix-size{% endif %}">
            <ul class="nav nav-tabs nav-tabs-owl tab-heading tab-heading-{{ _tab_title_style }} align-{{ _text_align_tab_title }}" role="tablist">

              {% for block in section.blocks %}
                {%- assign _tab_title = block.settings.tab_title -%}
                {%- assign _collection = block.settings.collection -%}
                {%- assign collection = collections[_collection] -%}
              
                <li class="tab-title nav-item">
                  <a class="nav-link{% if _number_active == forloop.index %} active {% endif %}" href="#hp-tabs-{{ section.id }}-{{ forloop.index }}" aria-controls="hp-tabs-{{ section.id }}-{{ forloop.index }}" role="tab" data-toggle="tab">
                    {% unless _collection == blank %}
                      {% unless _tab_title == blank %}{{ _tab_title }}{% else %}{{ collection.title }}{% endunless %}

                    {% else %}
                      {{ 'homepage.onboarding.tab_title' | t }}

                    {% endunless %}
                  </a>
                </li>

              {% endfor %}

            </ul>
          </div>

          <div class="tab-content">
            {% for block in section.blocks %}

              {%- assign _collection = block.settings.collection -%}
              {%- assign collection = collections[_collection] -%}

              <div role="tabpanel" class="{% if _number_active == forloop.index %}show active {% endif %}tab-pane" id="hp-tabs-{{ section.id }}-{{ forloop.index }}">
                <div class="hp-tabs-content">
                  
                  {% unless _subheading == blank %}
                    <a href="{{ collection.url }}" class="col-link">{{ _subheading }}{%- render 'theme-icon', type: 'angle-right' -%}</a>
                  {% endunless %}
                  
                  {% case block.type %}
                    {% when 'product' %}  
                      {% include 'products-tab-type-product' %}

                    {% when 'product-image' %}
                      {% include 'products-tab-type-image' %} 
                  
                  	{% when 'special-product' %}
                      {% include 'products-tab-type-special-product' %} 

                    {% else %}
                      {% include 'products-tab-type-special-product-v2' %}

                  {% endcase %}
                  
                </div>
              </div>

            {% endfor %}
          </div>
        
          {% if _type == 'carousel' %}
            <script>
              jQuery(document).ready(function($) {
                
                var _sections = new theme.Sections();
                _sections.register('products-tabs',function(){

                  var _type = $('#hp-tabs-{{ section.id }} .wrap-tab-content').attr('data-type');

                  if(_type == 'carousel'){
                    jQuery("#hp-tabs-{{ section.id }} .tabs-list-carousel").length && jQuery("#hp-tabs-{{ section.id }} .tabs-list-carousel").on('initialize.owl.carousel initialized.owl.carousel change.owl.carousel changed.owl.carousel', function(e) {
                      var current = e.relatedTarget.current()
                      var items = $(this).find('.owl-stage').children()
                      var add = e.type == 'changed' || e.type == 'initialized'

                      items.eq(e.relatedTarget.normalize(current )).toggleClass('current', add)
                    }).owlCarousel({
                        nav			: {{ _navigator }}
                        ,dots 		: {{ _paging }}
                        ,items		: {{ _item_per_row }}
                        ,rtl			: jQuery('body').data('rtl')
                        ,margin		: {{ _padding_carousel }}
                        ,responsive 	: {
                          0:{
                            items: 1
                          } 
                          ,576: {
                            items: {{ _item_per_row_mobile }}
                          }   
                          ,768:{
                             items: {{ _item_per_row_tablet }}
                          }
                          ,1024:{
                            items: {{ _item_per_row }}
                          }                                                                 
                        }
                        ,navText : ['<span class="button-prev"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="14" height="30" viewBox="0 0 17 64"><path d="M16.128 42.88q1.664 1.664 0 3.072-1.664 1.664-3.072 0l-12.288-12.416q-1.536-1.536 0-3.2l12.288-12.416q1.408-1.664 3.072 0 1.664 1.408 0 3.072l-9.984 11.008z"></path></svg></span>', '<span class="button-next"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="14" height="30" viewBox="0 0 17 64"><path d="M0.832 42.88l10.112-10.88-10.112-11.008q-1.664-1.664 0-3.072 1.664-1.664 3.072 0l12.288 12.416q1.536 1.664 0 3.2l-12.288 12.416q-1.408 1.664-3.072 0-1.664-1.408 0-3.072z"></path></svg></span>']
                    });
                  }
                
                });

              });
            </script>
          {% endif %}
 
        {% else %}

          <div class="nav-tab-wrapper">
            <ul class="nav nav-tabs tab-heading tab-heading-1" role="tablist">
              {% for i in (1..3) %}

                <li class="tab-title nav-item">
                  <a class="nav-link{% if forloop.first %} active{% endif %}{% if _lazyload %} lazyload{% endif %}" href="#hp-tabs-{{ section.id }}-{{ forloop.index }}" aria-controls="hp-tabs-{{ section.id }}-{{ forloop.index }}" role="tab" data-toggle="tab">
                    {{ 'homepage.onboarding.tab_title' | t }}
                  </a>
                </li>

              {% endfor %}
            </ul>
          </div>

          <div class="tab-content">
            {% for i in (1..3) %}

              <div role="tabpanel" class="{% if _number_active == forloop.index %}show active {% endif %}tab-pane" id="hp-tabs-{{ section.id }}-{{ forloop.index }}">
                <div class="hp-tabs-content type-product">
                  <div class="hp-tabs-list tabs-list-row">
                    <div class="row">
                      {{ emptyProduct }}
                    </div>
                  </div>
                </div>
              </div>

            {% endfor %}
          </div>

        {% endif %}
      </div>

  {% if settings.left_column_style == 'none' %}</div>{% endif %}
</div>