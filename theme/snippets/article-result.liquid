<article class="post-item">
  <div class="post-item-inner">

    <div class="post-image">
      {% if product.image %}
      {% assign image_alt = product.title | escape %}
      {{ product | img_url: '1024x1024' | img_tag: image_alt | link_to: product.url }}
      {% endif %}
    </div>

    <div class="post-content"> 
      <h3 class="post-title"><a href="{{product.url}}">{{ product.title }}</a></h3>   
      <div class="post-info">
        <ul class="list-inline">          
          <li><span class="post-date">{{ product.created_at | date: "%d %b, %Y" }}</span></li>
          <li><span class="post-author">{{ 'blogs.article.posted_by' | t }} {{ product.author | escape }}</span></li>
        </ul>
      </div>      
      <div class="post-des">{{ product.content | strip_html | truncatewords: 60 }}</div>      
      <div class="post-to-link"><a class="link-to-post btn btn-2" href="{{article.url}}" title="{{ 'blogs.article.read_more' | t }}">{{ 'blogs.article.read_more' | t }}</a></div>
    </div>
    
  </div>
</article>