{% include 'products-tabs-v3-snippet' %}

{% schema %}
{
  "name": "Products Tabs V3",
  "max_blocks": 6,
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Products Tabs V3' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Products Tabs V3"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full", "label": "Wide" }
      ]
    },
    {
      "type": "select",
      "id": "padding_section",
      "label": "Padding Section",
      "default": "yes",
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" }
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "number_active",
      "label": "Default active tab",
      "min": 1,
      "max": 6,
      "default": 1
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Newarrivals"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Go to section"
    },
    {
      "type": "header",
      "content": "Tab heading"
    },
    {
      "type": "select",
      "id": "alignment_tab_title",
      "label": "Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "tab_title_style",
      "label": "Border style",
      "options": [
        { "value": "1", "label": "Style 01" },
        { "value": "2", "label": "Style 02" },
        { "value": "3", "label": "Style 03" }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Block settings"
    },
    {
      "type": "select",
      "id": "type",
      "label": "Type",
      "default": "row",
      "options": [
        { "value": "row", "label": "Row" },
        { "value": "carousel", "label": "Carousel" }
      ]
    },
    {
      "type": "range",
      "id": "limited",
      "label": "Total items",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "header",
      "content": "Number of items per row"
    },
    {
      "type": "range",
      "id": "item_per_row",
      "label": "Desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "item_per_row_tablet",
      "label": "Tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "header",
      "content": "Carousel settings"
    },
    {
      "type": "select",
      "id": "carousel_style",
      "label": "Carousel style",
      "default": "1",
      "options": [
        { "value": "1", "label": "Style 01 - 1 row" },
        { "value": "2", "label": "Style 02 - 2 rows" }
      ]
    },
    {
      "type": "checkbox",
      "id": "navigator",
      "label": "Show Navigator",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "paging",
      "label": "Show Bullet",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Heading",
          "default": "Tab title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection item"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products Tabs V3",
      "category": "Products Tabs",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
