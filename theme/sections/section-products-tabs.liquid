{% include 'products-tabs-snippet' %}

{% schema %}
{
  "name": "Products Tabs",
  "max_blocks": 6,
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Products Tabs' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Products Tabs V1"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full", "label": "Wide" }
      ]
    },
    {
      "type": "checkbox",
      "id": "remove_padding",
      "label": "Remove padding between Heading and content"
    },
    {
      "type": "select",
      "id": "padding_section",
      "label": "Padding Section",
      "default": "yes",
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" }
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "number_active",
      "label": "Default active tab",
      "min": 1,
      "max": 6,
      "default": 1
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Newarrivals"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Text link",
      "default": "Go to section"
    },
    {
      "type": "checkbox",
      "id": "fix_subheading",
      "label": "Fix Text link position when Heading is too long"
    },
    {
      "type": "header",
      "content": "Tab heading"
    },
    {
      "type": "select",
      "id": "alignment_tab_title",
      "label": "Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "tab_title_style",
      "label": "Border style",
      "options": [
        { "value": "1", "label": "Style 01" },
        { "value": "2", "label": "Style 02" },
        { "value": "3", "label": "Style 03" }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Block settings"
    },
    {
      "type": "select",
      "id": "type",
      "label": "Type",
      "default": "row",
      "options": [
        { "value": "row", "label": "Row" },
        { "value": "carousel", "label": "Carousel" }
      ],
      "info": "Not use for Block content is Special product"
    },
    {
      "type": "range",
      "id": "limited",
      "label": "Total items",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "header",
      "content": "Number of items per row"
    },
    {
      "type": "range",
      "id": "item_per_row",
      "label": "Desktop",
      "min": 2,
      "max": 7,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "item_per_row_tablet",
      "label": "Tablet",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "item_per_row_mobile",
      "label": "Mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "header",
      "content": "Carousel settings",
      "info": "Not use for Block content is Special product"
    },
    {
      "type": "checkbox",
      "id": "navigator",
      "label": "Show Navigator",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "paging",
      "label": "Show Bullet",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Heading",
          "default": "Tab title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection item"
        }
      ]
    },
    {
      "type": "product-image",
      "name": "Product with image",
      "settings": [
        {
          "type": "header",
          "content": "Block Product"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection item"
        },
        {
          "type": "header",
          "content": "Block image"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Style",
          "options": [
            { "value": "1", "label": "Style 01" },
            { "value": "2", "label": "Style 02" }
          ],
          "default": "1"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_size",
          "label": "Image size",
          "info": "Default size is 200x300 pixels"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        }
      ]
    },
    {
      "type": "special-product",
      "name": "Special product",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Heading",
          "default": "Tab title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection"
        },
        {
          "type": "header",
          "content": "Special product"
        },
        {
          "type": "select",
          "id": "special_product_position",
          "label": "Poisition",
          "default": "left",
          "options": [
            { "value": "left", "label": "Left" },
      			{ "value": "middle", "label": "Middle 1" },
      			{ "value": "middle-2", "label": "Middle 2" },
      			{ "value": "right", "label": "Right" }
          ]
        },
        {
          "id": "product",
          "type": "product",
          "label": "Product"
        }
      ]
    },
    {
      "type": "special-product-2",
      "name": "Special product V2",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Heading",
          "default": "Tab title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection"
        },
        {
          "type": "header",
          "content": "Special product"
        },
        {
          "type": "select",
          "id": "special_product_position",
          "label": "Poisition",
          "default": "left",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ]
        },
        {
          "type": "text",
          "id": "product_special_text",
          "label": "Special offer text",
          "default": "Special Offer"
        },
        {
          "id": "product",
          "type": "product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "product_sold",
          "label": "Number of product already sold",
          "min": 0,
          "max": 100,
          "default": 6,
          "info": "Zero value to hide"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products Tabs V1",
      "category": "Products Tabs",
      "blocks": [
        { "type": "product" },
    		{ "type": "product" },
    		{ "type": "product" }
      ]
    }
  ]
}
{% endschema %}
