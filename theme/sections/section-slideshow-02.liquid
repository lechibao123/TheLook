{% include 'slideshow-v2-snippet' %}

{% schema %}
{
  "name": "Slideshow V2",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Slideshow V2' section. Please try to keep your slideshow images the same size."
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Slideshow V2"
    },
    {
      "type": "checkbox",
      "id": "show_slideshow",
      "label": "Show slideshow",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: hide for mobile"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Auto Slides"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto rotate between slides",
      "default": true
    },
    {
      "type":"range",
      "id":"autoplay_speed",
      "label":"Change slides every",
      "min":5,
      "max":10,
      "step": 1,
      "unit":"Sec",
      "default":6
    }, 
    {
      "type": "select",
      "id": "animation",
      "label": "Slideshow Animation",
      "default": "slide",
      "options": [
        { "label": "Fade", "value": "fade" },
        { "label": "Slide", "value": "slide" },
    		{ "label": "Cube", "value": "cube" },
    		{ "label": "Coverflow", "value": "coverflow" },
    		{ "label": "flip", "value": "flip" }
      ]
    },
    {
      "type": "header",
      "content": "Navigator"
    },
    {
      "type": "checkbox",
      "id": "navigator",
      "label": "Show Navigator Next Prev",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "paging",
      "label": "Show Bullet at Bottom",
      "default": false
    },
    {
      "type": "header",
      "content": "Block Right"
    },
    {
      "type": "select",
      "id": "slideshow_block_right",
      "label": "Select component to show",
      "options": [
        { "label": "Product", "value": "product" },
        { "label": "Image", "value": "banner" },
        { "label": "None", "value": "none" }
      ]
    },
    {
      "type": "header",
      "content": "Block Right - Image"
    },
    {
      "type": "select",
      "id": "three_banner_style",
      "label": "Style",
      "options": [
        { "label": "Style 1", "value": "1" },
        { "label": "Style 2", "value": "2" }
      ]
    },
    {
      "type": "color",
      "id": "three_image_bg_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Layout Content"
    },
    {
      "type": "checkbox",
      "id": "fix_text_box_position",
      "label": "Push the layout to the right"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slideshow",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "select",
          "id": "image_position",
          "label":"Image position",
          "default": "center center",
          "options": [
            { "value":"left top", "label": "Left top" },
            { "value":"center top", "label": "Center top" },
            { "value":"right top", "label": "Right top" },
            { "value":"left center", "label": "Left center" },
            { "value":"center center", "label": "Center center" },
            { "value":"right center", "label": "Right center" },
            { "value":"left bottom", "label": "Left bottom" },
            { "value":"center bottom", "label": "Center bottom" },
            { "value":"right bottom", "label": "Right bottom" }
          ]
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slideshow link to"
        },
        {
          "type": "header",
          "content": "TEXT BOX LAYOUT"
        },
        {
          "type": "range",
          "id": "position",
          "label": "Top vertical position",
          "default": 30,
          "min": 1,
          "max": 99,
          "step": 1,
          "unit": "%"
        }, 
        {
          "type": "range",
          "id": "horizontal_position",
          "label": "Left horizontal position",
          "default": 10,
          "min": 1,
          "max": 99,
          "step": 1,
          "unit": "%"
        }, 
        {
          "type": "select",
          "id": "alignment",
          "label": "Text alignment",
          "default": "text-center",
          "options": [
            { "value": "text-left", "label": "Left" },
            { "value": "text-center", "label": "Middle" },
            { "value": "text-right", "label": "Right" }
          ]
        },
        {
          "type": "header",
          "content": "Text box content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "textarea",
          "id": "caption",
          "label": "Subheading 2"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Label"
        },
        {
          "type": "header",
          "content": "Text box style"
        },
        {
          "type": "checkbox",
          "id": "heading_bold",
          "label": "Bold Heading"
        },
        {
          "type": "checkbox",
          "id": "subheading_bold",
          "label": "Bold Subheading"
        },
        {
          "type": "checkbox",
          "id": "caption_bold",
          "label": "Bold Subheading 2"
        },
        {
          "type": "header",
          "content": "Text box color"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "Subheading",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "caption_color",
          "label": "Subheading 2",
          "default": "#ffffff"
        },
        {
          "type": "header",
          "content": "Text box font size - Desktop"
        },
        {
          "type": "range",
          "id": "heading_size",
          "label": "Heading",
          "min": 10,
          "max": 80,
          "step": 1,
          "unit": "px",
          "default": 60
        },
        {
          "type": "range",
          "id": "subheading_size",
          "label": "Subheading",
          "min": 10,
          "max": 80,
          "step": 1,
          "unit": "px",
          "default": 48
        },
        {
          "type": "range",
          "id": "caption_size",
          "label": "Subheading 2",
          "min": 10,
          "max": 80,
          "step": 1,
          "unit": "px",
          "default": 30
        },
        {
          "type": "header",
          "content": "Text box font size - Mobile"
        },
        {
          "type": "range",
          "id": "mobile_heading_size",
          "label": "Heading",
          "min": 10,
          "max": 30,
          "step": 1,
          "unit": "px",
          "default": 13
        },
        {
          "type": "range",
          "id": "mobile_subheading_size",
          "label": "Subheading",
          "min": 10,
          "max": 30,
          "step": 1,
          "unit": "px",
          "default": 15
        },
        {
          "type": "range",
          "id": "mobile_caption_size",
          "label": "Subheading 2",
          "min": 10,
          "max": 30,
          "step": 1,
          "unit": "px",
          "default": 13
        },
        {
          "type": "header",
          "content": "Text box animation"
        },
        {
          "type": "select",
          "id": "heading_animation",
          "label": "Heading",
          "default": "fadeIn",
          "options": [
            { "value": "fadeIn", "label": "Fade In" },
            { "value": "moveFromLeft", "label": "Move From Left" },
            { "value": "moveFromRight", "label": "Move From Right" },
            { "value": "moveFromTop", "label": "Move From Top" },
            { "value": "moveFromBottom", "label": "Move From Bottom" }
          ]
        },
        {
          "type": "select",
          "id": "subheading_animation",
          "label": "Subheading",
          "default": "fadeIn",
          "options": [
            { "value": "fadeIn", "label": "Fade In" },
            { "value": "moveFromLeft", "label": "Move From Left" },
            { "value": "moveFromRight", "label": "Move From Right" },
            { "value": "moveFromTop", "label": "Move From Top" },
            { "value": "moveFromBottom", "label": "Move From Bottom" }
          ]
        },
        {
          "type": "select",
          "id": "caption_animation",
          "label": "Subheading 2",
          "default": "fadeIn",
          "options": [
            { "value": "fadeIn", "label": "Fade In" },
            { "value": "moveFromLeft", "label": "Move From Left" },
            { "value": "moveFromRight", "label": "Move From Right" },
            { "value": "moveFromTop", "label": "Move From Top" },
            { "value": "moveFromBottom", "label": "Move From Bottom" }
          ]
        },
        {
          "type": "select",
          "id": "button_animation",
          "label": "Button Animation",
          "default": "fadeIn",
          "options": [
            { "value": "fadeIn", "label": "Fade In" },
            { "value": "moveFromLeft", "label": "Move From Left" },
            { "value": "moveFromRight", "label": "Move From Right" },
            { "value": "moveFromTop", "label": "Move From Top" },
            { "value": "moveFromBottom", "label": "Move From Bottom" }
          ]
        },
        {
          "type": "header",
          "content": "Text box animation delay"
        },
        {
          "type": "range",
          "id": "heading_animation_delay",
          "label": "Heading",
          "default": 1,
          "min": 1,
          "max": 5,
          "step": 1,
          "unit": "Sec"
        },
        {
          "type": "range",
          "id": "subheading_animation_delay",
          "label": "Subheading",
          "default": 1,
          "min": 1,
          "max": 5,
          "step": 1,
          "unit": "Sec"
        },
        {
          "type": "range",
          "id": "caption_animation_delay",
          "label": "Subheading 2",
          "default": 1,
          "min": 1,
          "max": 5,
          "step": 1,
          "unit": "Sec"
        },
        {
          "type": "range",
          "id": "button_animation_delay",
          "label": "Button",
          "default": 1,
          "min": 1,
          "max": 5,
          "step": 1,
          "unit": "Sec"
        }
      ]
    },
    {
      "type": "product",
      "name": "Block Products",
      "limit": 1,
      "settings": [
        {
          "type": "collection",
          "id": "collection_1",
          "label": "Collection item 01"
        },
        {
          "type": "collection",
          "id": "collection_2",
          "label": "Collection item 02"
        },
        {
          "type": "collection",
          "id": "collection_3",
          "label": "Collection item 03"
        },
        {
          "type": "collection",
          "id": "collection_4",
          "label": "Collection item 04"
        },
        {
          "type": "collection",
          "id": "collection_5",
          "label": "Collection item 05"
        }
      ]
    },
    {
      "type": "br-image",
      "name": "Block Right - Image",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "three_image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "three_text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "three_button",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "three_link",
          "label": "Link to"
        }
      ]
    },
    {
      "type": "br-product",
      "name": "Block Right - Product",
      "limit": 3,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow V2",
    "category": "Slideshow",
    "settings": {
      "autoplay": true
    },
    "blocks": [
      { "type": "image" },
      { "type": "image" }
    ]
  }]
}
{% endschema %}
