{% include 'image-gallery-snippet' %}

{% schema %}
{
  "name": "Image Gallery V1",
  "max_blocks": 20,
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Image Gallery' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Image Gallery"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full",  "label": "Wide" }
      ]
    },
    {
      "type": "select",
      "id": "type",
      "label": "Type",
      "options": [
        { "value": "row", "label": "Row" },
        { "value": "carousel", "label": "Carousel" },
		{ "value": "masonry", "label": "Masonry" }
      ],
      "default": "row"
    },
    {
      "type": "range",
      "id": "padding_section",
      "label": "Padding section",
      "min": 0,
      "max": 15,
      "unit": "px",
      "default": 10
    },
    {
      "type": "select",
      "id": "effect",
      "label": "Hover Effect",
      "options": [
        { "value": "1", "label": "None" },
        { "value": "2", "label": "Effect Image" }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "Number of items per row",
      "info": "Not for Type is Masonry"
    },
    {
      "type": "range",
      "id": "item_per_row",
      "label": "Desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "item_per_row_tablet",
      "label": "Tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "item_per_row_mobile",
      "label": "Mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_size",
          "label": "Image size (pixels)",
          "default": "630x350",
          "info": "Not for Masonry. Eg: 630x350"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Desktop - Masonry image width",
          "min": 1,
          "max": 12,
          "step": 1,
          "default": 6,
          "unit": "/12"
        },
        {
          "type": "range",
          "id": "image_width_tablet",
          "label": "Tablet - Masonry image width",
          "min": 1,
          "max": 12,
          "step": 1,
          "default": 6,
          "unit": "/12"
        },
        {
          "type": "range",
          "id": "image_width_mobile",
          "label": "Mobile - Masonry image width",
          "min": 1,
          "max": 12,
          "step": 1,
          "default": 6,
          "unit": "/12"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link to"
        },
        {
          "type": "header",
          "content": "Text Box Layout",
          "info": "Heading, Subheading, Offer, Button"
        },
        {
          "type": "checkbox",
          "id": "text_box_overlay",
          "label": "Disable text box overlay",
          "default": false
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text box alignment",
          "default": "center-center",
          "options": [
            { "label": "Top left", "value": "top-left" },
            { "label": "Top center", "value": "top-center" },
            { "label": "Top right", "value": "top-right" },
            { "label": "Middle left", "value": "center-left" },
            { "label": "Middle center", "value": "center-center" },
            { "label": "Middle right", "value": "center-right" },
            { "label": "Bottom left", "value": "bottom-left" },
            { "label": "Bottom center", "value": "bottom-center" },
            { "label": "Bottom right",  "value": "bottom-right" }
          ],
          "info": "Not use when text box overlay is disabled"
        },
        {
          "type": "header",
          "content": "Text Box Content"
        },
        {
          "type": "text",
          "id": "image_title",
          "label": "Text",
          "default": "Heading"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Text",
          "default": "Subheading"
        },
        {
          "type": "text",
          "id": "offer",
          "label": "Offer",
          "default": "Offer ends in"
        },
        {
          "type": "text",
          "id": "expire",
          "label": "Expire offer",
          "info": "(mm/dd/yyyy. Eg: 12/25/2019)"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button label"
        },
        {
          "type": "header",
          "content": "Text Box Style"
        },
        {
          "type": "checkbox",
          "id": "title_text_bold",
          "label": "Bold Heading"
        },
        {
          "type": "checkbox",
          "id": "subtitle_text_bold",
          "label": "Bold Subeading"
        },
        {
          "type": "header",
          "content": "Text Box Color"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Heading",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Subheading",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "offer_color",
          "label": "Offer",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button label color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_bg_color",
          "label": "Button background",
          "default": "#ffffff"
        },
        {
          "type": "header",
          "content": "Text Box Font Size"
        },
        {
          "type": "select",
          "id": "title_size",
          "label": "Heading",
          "default": "h2",
          "options": [
            { "value": "h1", "label": "Heading 1" },
            { "value": "h2", "label": "Heading 2" },
            { "value": "h3", "label": "Heading 3" },
            { "value": "h4", "label": "Heading 4" },
            { "value": "h5", "label": "Heading 5" },
            { "value": "h6", "label": "Heading 6" }
          ]
        },
        {
          "type": "select",
          "id": "subtitle_size",
          "label": "Subheading",
          "default": "h5",
          "options": [
            { "value": "h1", "label": "Heading 1" },
            { "value": "h2", "label": "Heading 2" },
            { "value": "h3", "label": "Heading 3" },
            { "value": "h4", "label": "Heading 4" },
            { "value": "h5", "label": "Heading 5" },
            { "value": "h6", "label": "Heading 6" }
          ]
        },
        {
          "type": "select",
          "id": "offer_size",
          "label": "Subheading",
          "default": "h5",
          "options": [
            { "value": "h1", "label": "Heading 1" },
            { "value": "h2", "label": "Heading 2" },
            { "value": "h3", "label": "Heading 3" },
            { "value": "h4", "label": "Heading 4" },
            { "value": "h5", "label": "Heading 5" },
            { "value": "h6", "label": "Heading 6" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Gallery V1",
      "category": "Banner",
      "blocks": [
        { "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" }
      ]
    }
  ]
}
{% endschema %}