{% include 'product-bundle-template' %}

{% schema %}
  {
    "name": "Product Bundle Pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_payment_button",
        "label": "Show dynamic checkout button",
        "info": "Lets customers check out directly using a familiar payment method. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_pre_order_button",
        "label": "Show Pre-order button",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_product_vendor",
        "label": "Product vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_product_collections",
        "label": "Product Collections",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_product_sku",
        "label": "Product Code - SKU",
        "default": true
      },
      {
        "type": "header",
        "content": "Metafield",
        "info": "Metafield allow you to attach metadata, which is additional information to a store's resources. Please install the [Custom Fields](http:\/\/freakdesign.com.au\/pages\/shopify-custom-fields) from chrome extension."
      },
      {
        "type": "checkbox",
        "id": "meta_countdown_timer",
        "label": "Metafields Countdown Timer: c_f.countdown_timer",
        "default": true,
        "info": "Please make sure you config product's compare price to make this label visible [(?)](http:\/\/help.shopify.com\/manual\/products\/promoting-marketing\/sales)"
      },
      {
        "type": "checkbox",
        "id": "meta_description_excerpt",
        "label": "Metafields Description Excerpt: c_f.description_excerpt",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "meta_video",
        "label": "Metafields video: c_f.video_url",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "meta_size_chart",
        "label": "Metafields size chart: c_f.image_size_chart",
        "default": true
      },    
      {
        "type": "header",
        "content": "Order and Shipping Time",
        "info": "Working days"
      },
      {
        "type": "checkbox",
        "id": "order_shipping_time",
        "label": "Enable Order and Shipping Time",
        "default": true
      },
      {
        "type": "range",
        "id": "deadline_day",
        "label": "Deadline each day",
        "default": 14,
        "min": 0,
        "max": 23,
        "step": 1,
        "unit": "h"
      },
      {
        "type": "range",
        "id": "delivery_time",
        "label": "Delivery time",
        "default": 2,
        "min": 1,
        "max": 7,
        "step": 1,
        "unit": "d"
      },
      {
        "type": "header",
        "content": "Secure image protection"
      },
      {
        "type": "image_picker",
        "id": "secure",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Related Product"
      },
      {
        "type": "checkbox",
        "id": "enable_related_product",
        "label": "Enable Related Product",
        "default": true
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Related items"
      },
      {
        "type": "select",
        "id": "related_product_data",
        "label": "How to select related products",
        "options": [
          { "label": "Same Collection", "value": "collection" },
          { "label": "Same Vendor", "value": "vendors"
          }
        ],
        "default": "collection"
      },
      {
        "type": "range",
        "id": "item_per_row",
        "label": "Items per row - Desktop",
        "min": 2,
        "max": 7,
        "step": 1,
        "default": 6
      },
      {
        "type": "range",
        "id": "item_per_row_tablet",
        "label": "Items per row - Tablet",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "item_per_row_mobile",
        "label": "Items per row - Mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      },
      {
        "type": "range",
        "id": "related_product_limit",
        "label": "Total items",
        "min": 2,
        "max": 18,
        "step": 1,
        "default": 6
      },
      {
        "type": "header",
        "content": "Product Tabs"
      },
      {
        "type": "color",
        "id": "product_tab_bg_color",
        "label": "Background color",
        "default": "#fff"
      },
      {
        "type": "checkbox",
        "id": "show_product_tab",
        "label": "Show product tabs",
        "default": true,
        "info": "To customize your product tabs, please click Add content."
      },
      {
        "type": "select",
        "id": "product_tab_review",
        "label": "Product Review Position",
        "options": [
          { "label": "Inside the product tabs", "value": "inside" },
          { "label": "Below the product tabs", "value": "below" }
        ],
        "default": "inside"
      }
    ],
    "blocks": [
      {
        "type": "description",
        "name": "Standard - Description",
        "limit": 1,
        "settings": [
        {
          "type": "paragraph",
          "content": "Standard tab are created base on your Product description content. If you'd like unique set of tabs for each product you shoud use heading 5 function"
        },
        {
          "type": "checkbox",
          "id": "multi-tab",
          "label": "Use Multi-tabs with heading 5 tag",
          "default": true,
          "info": "We use heading 5 in Product's description to seperate Multi-tabs, each <h5>Tabs Title</h5> will be considered as content seperator and tabs title"
          }
        ]
      },
      {
        "type": "page",
        "name": "Static - Page",
        "settings": [
          {
            "type": "paragraph",
            "content": "Static tab are created base on Your Shopify page Content. It's usefull for some content that is same for all the products like Shipping term, Size Guide, and so on"
          },
          {
            "type": "text",
            "id": "page_title",
            "label": "Heading"
          },
          {
            "type": "page",
            "id": "page",
            "label": "Select a Page"
          }
        ]
      }
    ]
  }
{% endschema %}