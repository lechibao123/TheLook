{% include 'products-tabs-v2-snippet' %}

{% schema %}
{
  "name": "Products Tabs V2",
  "max_blocks": 6,
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Products Tabs V2' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Products Tabs V2"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full", "label": "Wide" }
      ]
    },
    {
      "type": "select",
      "id": "padding_section",
      "label": "Padding Section",
      "default": "yes",
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" }
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "number_active",
      "label": "Default active tab",
      "min": 1,
      "max": 6,
      "default": 1
    },
    {
      "type": "header",
      "content": "Tab heading"
    },
    {
      "type": "select",
      "id": "tab_title_style",
      "label": "Border style",
      "options": [
        { "value": "1", "label": "Style 01" },
        { "value": "2", "label": "Style 02" },
		{ "value": "3", "label": "Style 03" }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "limited",
      "label": "Total items",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    },
    {
      "type": "header",
      "content": "Number of items per row"
    },
    {
      "type": "range",
      "id": "item_per_row",
      "label": "Desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "item_per_row_tablet",
      "label": "Tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "item_per_row_mobile",
      "label": "Mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Heading",
          "default": "Tab title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection"
        },
        {
          "type": "header",
          "content": "Special product"
        },
        {
          "type": "text",
          "id": "product_special_text",
          "label": "Offer text",
          "default": "Special <br> Offer"
        },
        {
          "id": "product",
          "type": "product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "product_sold",
          "label": "Already sold",
          "min": 0,
          "max": 100,
          "default": 6,
          "info": "Zero value to hide"
        },
        {
          "type": "text",
          "id": "product_expire",
          "label": "Expire",
          "info": "mm/dd/yyyy. Eg: 12/14/2019"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products Tabs V2",
      "category": "Products Tabs",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
