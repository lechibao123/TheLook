{% include 'image-gallery-v2-snippet' %}

{% schema %}
{
  "name": "Image Gallery V2",
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Image Gallery V2' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Image Gallery v2"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full",  "label": "Wide" }
      ]
    },
    {
      "type": "select",
      "id": "type",
      "label": "Type",
      "options": [
        { "value": "row", "label": "Row" },
        { "value": "carousel", "label": "Carousel" }
      ],
      "default": "row"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "image_size",
      "label": "Image size",
      "default": "125x75",
      "info": "Eg: 125x75"
    },
    {
      "type": "header",
      "content": "Border top"
    },
    {
      "type": "checkbox",
      "id": "border_top",
      "label": "Show Border top"
    },
    {
      "type": "color",
      "id": "border_top_color",
      "label": "Color",
      "default": "#e0be00"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to"
        }
      ]
    }
    
  ],
  "presets": [
    {
      "name": "Image Gallery V2",
      "category": "Banner",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" },
    		{ "type": "image" }
      ]
    }
  ]
}
{% endschema %}
