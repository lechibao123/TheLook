          "info": "Default is 45x35 pixels"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Policy's title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "subtitle",
          "default": "Policy's subtitle"
        }
      ]
    }
    
  ],
  "presets": [
    {
      "name": "Policies",
      "category": "Advanced layout",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
