{% schema %}
{
  "name": "Policies",
  "max_blocks": 5,
  "settings": [
    {
      "type": "paragraph",
      "content": "Created by 'Policies' section"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Section Label",
      "default": "Policies"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
