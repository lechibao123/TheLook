{% include 'homepage-left-column-snippet' %}

{% schema %}
  {
    "name": "Left column - Homepage",
    "settings": [ 
      {
        "type": "checkbox",
        "id": "lazyload",
        "label": "Enable Lazy loading",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "The default image size is 330x500 px"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link to"
          }
        ]
      },
      {
        "type": "products-listing",
        "name": "Products Listing",
        "settings": [
          {
            "type": "text",
            "id": "sb_latest_product_title",
            "label": "Heading",
            "default": "Latest Products"
          },
          {
            "type": "collection",
            "id": "sb_latest_product_col",
            "label": "Collection"
          },
          {
            "type": "range",
            "id": "sb_latest_product_limit",
            "label": "Total items",
            "min": 1,
            "max": 12,
            "default": 8
          }
        ]
      },
      {
        "type": "service",
        "name": "Service",
        "settings": [
          {
            "type": "header",
            "content": "Service 01"
          },
          {
            "type": "checkbox",
            "id": "enable_sb_services_1",
            "label": "Service 01",
            "default": true
          },
          {
            "type": "text",
            "id": "sb_services_icon_1",
            "label": "Font icon name",
            "default": "icon-electro-track-order-icon",
            "info": "Default is icon-electro-track-order-icon"
          },
          {
            "type": "text",
            "id": "sb_services_title_1",
            "label": "Text 1"
          },
          {
            "type": "text",
            "id": "sb_services_caption_1",
            "label": "Text 2"
          },
          {
            "type": "header",
            "content": "Service 02"
          },
          {
            "type": "checkbox",
            "id": "enable_sb_services_2",
            "label": "Service 02",
            "default": true
          },
          {
            "type": "text",
            "id": "sb_services_icon_2",
            "label": "Font icon name",
            "default": " icon-electro-thumb",
            "info": "Default is  icon-electro-thumb"
          },
          {
            "type": "text",
            "id": "sb_services_title_2",
            "label": "Text 1"
          },
          {
            "type": "text",
            "id": "sb_services_caption_2",
            "label": "Text 2"
          },
          {
            "type": "header",
            "content": "Service 03"
          },
          {
            "type": "checkbox",
            "id": "enable_sb_services_3",
            "label": "Service 03",
            "default": true
          },
          {
            "type": "text",
            "id": "sb_services_icon_3",
            "label": "Font icon name",
            "default": "icon-electro-return-icon",
            "info": "Default is icon-electro-return-icon"
          },
          {
            "type": "text",
            "id": "sb_services_title_3",
            "label": "Text 1"
          },
          {
            "type": "text",
            "id": "sb_services_caption_3",
            "label": "Text 2"
          },
          {
            "type": "header",
            "content": "Service 04"
          },
          {
            "type": "checkbox",
            "id": "enable_sb_services_4",
            "label": "Service 04",
            "default": true
          },
          {
            "type": "text",
            "id": "sb_services_icon_4",
            "label": "Font icon name",
            "default": "icon-electro-payment",
            "info": "Default is icon-electro-payment"
          },
          {
            "type": "text",
            "id": "sb_services_title_4",
            "label": "Text 1"
          },
          {
            "type": "text",
            "id": "sb_services_caption_4",
            "label": "Text 2"
          },
          {
            "type": "header",
            "content": "Service 05"
          },
          {
            "type": "checkbox",
            "id": "enable_sb_services_5",
            "label": "Service 05",
            "default": true
          },
          {
            "type": "text",
            "id": "sb_services_icon_5",
            "label": "Font icon name",
            "default": "icon-electro-brands-icon",
            "info": "Default is icon-electro-brands-icon"
          },
          {
            "type": "text",
            "id": "sb_services_title_5",
            "label": "Text 1"
          },
          {
            "type": "text",
            "id": "sb_services_caption_5",
            "label": "Text 2"
          }
        ]
      },
      {
        "type": "products-grid",
        "name": "Products Grid",
        "settings": [
          {
            "type": "text",
            "id": "grid_title",
            "label": "Heading",
            "default": "Featured Products"
          },
          {
            "id": "grid_collection",
            "type": "collection",
            "label": "Collection"
          },
          {
            "type": "text",
            "id": "grid_limited_item",
            "label": "Total items",
            "default": "4"
          }
        ]
      },
      {
        "type": "blog",
        "name": "Blog post",
        "settings": [
          {
            "type": "text",
            "id": "blog_title",
            "label": "Heading",
            "default": "From The Blog"
          },
          {
            "id": "blog",
            "type": "blog",
            "label": "Blog item"
          },
          {
            "type": "text",
            "id": "blog_limited_item",
            "label": "Total items",
            "default": "4"
          }
        ]
      }
    ]
  }
{% endschema %}