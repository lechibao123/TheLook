{% include 'recently-viewed-snippet' %}

{% schema %}
{
  "name": "Recently Viewed",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_mobile",
      "label": "Visibility: Hide for Mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout Mode",
      "default": "boxed",
      "options": [
        { "value": "boxed", "label": "Boxed" },
        { "value": "full", "label": "Wide" }
      ]
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text",
      "default": "Your Recently Viewed Products"
    },
    {
      "type": "header",
      "content": "Carousel settings"
    },
    {
      "type": "checkbox",
      "id": "navigator",
      "label": "Show Navigator",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "paging",
      "label": "Show Bullet",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Recently Viewed"
    }
  ]
}
{% endschema %}
